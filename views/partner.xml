<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="partner_credit_inv_view" model="ir.ui.view">
		<field name="name">partner credit In invoice</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="preventing_credit_inv"    invisible="1"  />
                <field name="user_preventing_credit_inv"    invisible="1"/>
                 <field name="customer_rank" invisible="1"/>
               
                <field name="partner_dealing_invoice"  attrs="{'readonly': [('user_preventing_credit_inv','=', False)],'invisible': [('preventing_credit_inv','=', False)]}" />

                    
            </xpath>
 

		</field>
	</record>
</odoo>
